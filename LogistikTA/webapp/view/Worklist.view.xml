<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="TA.LogistikTA.controller.Worklist"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App>
		<pages>
			<Page title="Title">
				<content>
					<Table id="table" width="auto" items="{ path: '/Packets', sorter: { path: 'ID', descending: false } }"
						 growing="true" growingScrollToLoad="true"
						updateFinished=".onUpdateFinished">
						<headerToolbar>
							<Toolbar>
								<Title id="tableHeader" text="{worklistView>/worklistTableTitle}"/>
								<ToolbarSpacer/>
								<SearchField id="searchField" tooltip="{i18n>worklistSearchTooltip}" search=".onSearch" width="auto"></SearchField>
							</Toolbar>
						</headerToolbar>
						<columns>
							<Column id="idColumn">
								<Text text="{i18n>ID_Nummer}" id="idColumntitle"/>
							</Column>
							<Column id="Status" hAlign="End">
								<Text text="{i18n>Status}" id="Statustitle"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem type="Navigation" press="handleListItemPress">
								<cells>
									<ObjectIdentifier title="{ID}"/>
									<ObjectNumber number="{ path: 'UnitsInStock', formatter: '.formatter.numberUnit' }"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>